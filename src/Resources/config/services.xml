<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="ajgl_logout_redirector.security.logout.redirector" class="Ajgl\Bundle\LogoutRedirectorBundle\Http\Logout\LogoutRedirector" abstract="true">
            <argument type="service" id="security.http_utils"/>
            <argument/> <!-- Context -->
            <argument type="collection"/> <!-- Options -->
        </service>

        <service id="ajgl_logout_redirector.security.logout.listener" class="Ajgl\Bundle\LogoutRedirectorBundle\Http\EventListener\LogoutRedirectorEventListener">
            <argument type="service" id="security.firewall.map"/>
            <argument type="tagged_iterator" tag="ajgl_logout_redirector" index-by="context"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
